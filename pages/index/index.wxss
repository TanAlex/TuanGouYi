/* pages/index/index.wxss */
.section {
  margin: 40rpx auto;
}
.grid-row {
   display: flex; 
}
.grid-row:nth-child(1) {
   margin-bottom: 16rpx; 
}
.grid-item {
  position: relative;
  flex: 1; 
  height: 218rpx; 
  margin: 0 8rpx; 
  border-radius: 4px; 
  overflow: hidden;
}
.grid-item:nth-child(1), .grid-item:nth-child(4) {
  margin-left: 0;
}
.grid-item:nth-child(3), .grid-item:nth-child(6) {
  margin-right: 0;
}
.grid-item text {
  position: absolute;
  bottom: 12%;
  left: 14%;
  font-size: 38rpx;
  font-weight: normal;
  color: #fff;
  z-index: 1;
}
.grid-item image {
  display: block;
  width: 100%;
  height: 100%;
  z-index: 0;
}
.hero-slider {
  width: 100%;
}
.hero-slider image {
  width: 100%;
  height: 100%;
}
.hero-slider text {
  color: #7D7D7D;
}
.article-list-item {
  position: relative;
  margin-bottom: 18rpx;
  height: 174rpx;
  background-color: #ccc;
  border-radius: 4px;
  text-align: center;
  overflow: hidden;
}
.article-list-item text {
  position: relative;
  font-size: 36rpx;
  color: #fff;
  line-height: 174rpx;
  z-index: 1;
}
.article-list-item image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 0;
}
.about {
  margin-top: 20px;
}
.about-des {
  font-size: 28rpx;
  color: #BFC5CC;
  text-align: center;
} 


.list {
  margin-top: 50rpx;
}
.list-item {
  position: relative;
  margin-bottom: 24rpx;
  height: 160rpx; 
  background-color: #fff;
  border-radius: 10px 4px 4px 10px;
  box-shadow: 0px 1px 4px #D8DDE5;
  line-height: 160rpx;
  overflow: hidden;
}
.list-avatar {
  position: relative;
  margin: 20rpx 16rpx 0 20rpx;
  float: left;
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%; 
  overflow: hidden; 
}
.list-img {
  position: absolute;
  top: -3%;
  left: -3%;
  width: 106%;
  height: 106%;
}
.list-text {
  line-height: 70rpx;
  float: left;
  
}
.list-text-line{
  clear:both;
  display: block;
}
.clear-fix{
  clear: both;
}
.order_name {
  
  font-size: 32rpx;
  color: #474747;
  
}
.order_desc {
  
  font-size: 28rpx;
  line-height: 35rpx;
  color: #a7a7a7;
}
.new_tag {
  position: absolute;
  top: 14rpx;
  display: inline-block;
  width: 38px;
  height: 19px;
  background: linear-gradient(to right, #FF9966, #FF5E62);
  font-size: 28rpx;
  color: #fff;
  line-height: 18px;
  border-radius: 10px 10px 10px 2px;
  text-align: center;
  margin-left: 6px;
}
.list-icon {
  float: right;
  margin-top: 20rpx;
  margin-right: 28rpx;
  width: 60rpx;
  height: 60rpx;
}
.list-icon image {
  width: 100%;
  height: 100%;
  color: #D2D6DE;
}

button {
  margin: 8px auto;
}