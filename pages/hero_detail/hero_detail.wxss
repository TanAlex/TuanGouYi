/* hero_detail.wxss */
.header {
  position: relative;
  height: 150rpx;
}
.cover {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 0;
  overflow: hidden; 
}
.cover image {
  width: 100%;
}
.filter {
  position: absolute; 
  bottom: 0; 
  left: 0; 
  width: 100%;
  height: 60%;
  background: linear-gradient(to bottom, rgba(255, 255, 255, 0), rgba(255, 255, 255, 0.8) 50%, rgba(255, 255, 255, 1));
  z-index: 2;
}
.hero-title {
  position: absolute;
  bottom: 0; 
  left: 3%;
  z-index: 3;
}
.hero-title .role {
  font-size: 30rpx;
  color: #DBAC5A;
  font-weight: bold;
  text-shadow: 0 0 12px #fff; 
  line-height: 1;
  margin-bottom: 16rpx;
}
.hero-title .name {
  font-size: 40rpx;
  color: #000;
  font-weight: bolder;
  line-height: 1;
}
.section {
  padding: 16px 3%;
  background-color: #fff;
}
.prompt {
  margin-top: 12px;
  font-size: 30rpx;
  color: #8C9298;
}
.container {
  background-color: #FFFFFF;
}
.slist {
  display: flex;
}
.sitem {
  flex: 1;
  text-align: center;
}
.sitem image {
  display: block;
  margin: 0 auto;
  width: 110rpx;
  height: 110rpx;
}
.sname {
  margin-top: 8px;
  font-size: 30rpx;
  color: #323232;
}
.sdesc {
  font-size: 26rpx;
  color: #8C9298;
}
.attr-list {

}
.attr-item {
  padding: 4px 0;
  overflow: auto;
}
.attr-desc {
  float: left;
  width: 80px; 
  font-size: 32rpx;
  color: #7D7D7D;
}
.attr-item .progress {
  position: relative;
  top: 7px;
  float: left;
  width: calc(100% - 80px);
  height: 9px;
  background-color: #E1E9F0;
  border-radius: 10px;
}
.attr-item .progress .bar {
  height: 100%;
  background-color: #4A98FF;
  border-radius: 10px;
}
.hero-nav {
  margin-top: 10px;
  display: flex;
  height: 44px;
  background-color: #fff;
  border-bottom: 1px solid #E4E7EB;
}
.nav-item {
  flex: 1;
  margin: 0 120rpx; 
  font-size: 32rpx;
  color: #A3A7AE;
  text-align: center;
  line-height: 44px;
  border-bottom: 0px solid #CE9E4A;
  transition: color .3s, border-bottom .2s;
}
.nav-current {
  color: #CE9E4A;
  border-bottom: 2px solid #CE9E4A;
}
.skill-tab {
  display: flex; 
}
.skill-tab-item {
  flex: 1;
  margin-right: 8px;
}
.skill-tab-item:last-child {
  margin-right: 0;
}
.skill-tab-item image {
  display: block;
  margin: 0 auto;
  width: 128rpx;
  height: 128rpx;
  padding: 3px;
  border-radius: 50%;
  border: 2px solid #C6CBCF; 
  box-sizing: border-box; 
  transition: .3s;
}
.skill-tab .current image {
  border-color: #E7C17D;
}
.skill-content {
  margin-top: 8px; 
}
.skill-content-header {
  position: relative;
  margin-top: 14px;
}
.section-title-2 {
  font-size: 38rpx;
  color: #444;
  font-weight: 500;
  margin-bottom: 10rpx;
}
.button-right {
  width: 75rpx;
  position: relative;
  margin: 3px;
  float:right;
  top:0;
  right: 3%;
  padding: 8px 8px;
  font-size: 22rpx;
  color: #0C0C0C;
  /*background: linear-gradient(to right, #99DC66, #3EDC62);*/
  background-color: rgb (10,239,10, 0.7);
  line-height: 0.5;
  border: 1px solid #A0A8AE;
  border-radius: 4px;
  text-align: center;
  box-shadow: 0px 1px 4px #D8DDE5;
}
.item-row {
  display: inline-flex;
  align-items: center;
  margin-top: 10px;
  padding-top: 10px;
}
.item-row-top-line {
  border-top: 1rpx solid #D8D8D8;
  width: 100%
}
.item-row-bottom-line {
  border-top: 1rpx solid #D8D8D8;
}

.item-avatar {
  position: relative;
  display: inline-flex;

  width: 60rpx;
  height: 60rpx;
  border-radius: 50%; 
  overflow: hidden; 
  
}
.item-img {
  position: absolute;
  top: -3%;
  left: -3%;
  width: 106%;
  height: 106%;
}
.item-name {
  font-size: 34rpx;
  color: #323232;
  font-weight: normal;
  
  display: inline-flex;
  margin: 5px;
  margin-left:20px;
}
.item-name-2 {
  font-size: 26rpx;
  color: #8C9298;
  margin: 10px;
  margin-left: 30px;
}
.item-value {
  font-size: 26rpx;
  color: #8C9298;
  margin: 5px;
  margin-left: 30px;

}
.item-value-2 {
  font-size: 26rpx;
  color: #8C9298;
  margin: 5px;
  margin-left: 40px;

}

.item-price{
  font-size:26rpx;
  color: #0C0C0C;
  background-color: #FeFeDA;
  margin-left: 5rpx;
  padding: 5px;
}

.item-price-cross{
  font-size:26rpx;
  text-decoration: line-through;
  color: #000000;
  background-color: #FFFFFF;
}
.item-price-cross:after {
  content: "paid";
  position: relative;
  font-size:10px;
  padding: 2px 6px;
  left: 5rpx;
  top: -10px;
  margin-left:-2px;
  border: 1rpx solid #08D808;
  background-color:  #08D808;
  color: #F8F8F8;
  border-radius: 4px;
  display:inline-block;
  text-decoration: none;
}


.item-tag {
  display: inline-block;
  top:0;
  padding: 3px 8px;
  font-size: 19rpx;
  color: #A0A8AE;
  line-height: 0.5;
  border: 1px solid #A0A8AE;
  border-radius: 10px;
  margin: -16px 10px
}
.skill-name {
  font-size: 32rpx;
  color: #323232;
  font-weight: bold;
  margin-left:10px;
}
.skill-value {
  font-size: 26rpx;
  color: #8C9298;
}
.skill-tag {
  position: absolute;
  top: 0;
  right: 0;
  padding: 3px 10px;
  font-size: 28rpx;
  color: #A0A8AE;
  line-height: 1;
  border: 1px solid #A0A8AE;
  border-radius: 10px;
}
.skill-desc {
  margin-top: 12px;
  font-size: 30rpx;
  color: #323232;
}
.slider-container {
  padding-left: 0;
  padding-right: 0;
}
.equip-tlt, .equip-build .prompt {
  margin-left: auto;
  margin-right: auto;
  width: 94%;
}
.equip-build {
  margin-bottom: 24px;
}
.equip-build:last-child {
  margin-bottom: 0;
}
.equip-tlt {
  margin-bottom: 12px;
  font-size: 32rpx;
  color: #555;
  line-height: 1;
}
.equip-slider .avatar {
  width: 110rpx;
  height: 110rpx;
}
.rune image {
  width: 94rpx;
  height: 110rpx;
}
.summoner .slist {
  display: block;
}
.summoner .sitem {
  display: inline-block;
  margin-right: 20px;
}
.summoner image {
  border-radius: 50%;
}



button {
  margin: 8px auto;
  width: 95%;
  font-size: 16px;
}

.flex-left {
   display: -webkit-flex;
   display: flex;
   -webkit-flex-direction: row;
   flex-direction: row;
   -webkit-justify-content: flex-start;
   justify-content: flex-start;
   align-items: center;
}

.footer {
  position: fixed;
  right: 0;
  bottom: 0;
  left: 0;
  padding: 1px;
  background-color: #efefef;
  text-align: center;
}

.section-header {
  font-size: 34rpx;
  color: #030303;
  margin: 5px;
  margin-left: 2px;

}
.section-header:before {
  content: " ";
  
  left: 0;
  top: 0;
  bottom: 0;
  width: 18px;
  border-left: 3px solid #D80000;
  color: #D80000;
  margin-right: 10px;
}
.section-text-highlight {
  font-size: 30rpx;
  display: inline-block;
  color: #030303;
  margin: 5px;
  margin-left: 18px;
  background-color: #FeFeDA;
}
.section-text{
  font-size: 30rpx;
  display: inline-block;
  color: #030303;
  margin: 5px;
  margin-left: 18px;
}