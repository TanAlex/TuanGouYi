<view class="container" style="background: {{ bg }}">
  <view class="card">
    <text class="name">{{ name }}</text>
    <text wx:if="{{ spell }}" class="spell">[{{ spell }}]</text>
    <text class="des">{{ des }}</text>
    <view class="item-row">
      <view class="item-avatar">
        <image class="item-img" src="{{avatarUrl}}"></image>
      </view>
      <text class="item-des">{{ user }}</text>
    </view>
  </view>
</view>