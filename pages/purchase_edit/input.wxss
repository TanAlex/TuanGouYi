@import "../common/lib/weui.wxss";

.page-section{
  margin-bottom: 20rpx;
}

.weui-cells-m1{
  margin-top: 3px;
  
}

.btn-area{
  margin:50rpx auto;
  width: 75%;

}

button {
  margin: 8px auto;
}

.input-list {
  padding: 8rpx 30rpx;
  position: relative;
  display: flex;
  align-items: flex-start;
  flex-direction: column;
}
.input-list-flex-left {
   display: -webkit-flex;
   display: flex;
   -webkit-flex-direction: row;
   flex-direction: row;
   -webkit-justify-content: flex-start;
   justify-content: flex-start;
   align-items: center;
}

.input-list-flex-right {
   display: -webkit-flex;
   display: flex;
   -webkit-flex-direction: row;
   flex-direction: row;
   -webkit-justify-content: flex-end;
   justify-content: flex-end;
   align-items: center;
}
.input-lable {
  font-size: 15px;
  margin-top: 2px;
  margin-bottom: 2px;
  margin-right:5px;
}
.input-box {
  height: 0.8em;
  font-size:15px;
  padding: 1px 5px;
  margin-top: 2px;
  margin-bottom: 2px;
  background-color: #F9F9F9;
}
.input-box-picker {
  height: 1.8em;
  font-size:15px;
  padding: 1px 5px;
  margin-top: 2px;
  margin-bottom: 2px;
  background-color: #F9F9F9;
}

.input-list:before {
  content: " ";
  position: absolute;
  left: 0rpx;
  right: 0rpx;
  top: 0;
  
  height: 1px;
  border-top: 1rpx solid #D8D8D8;
  color: #D8D8D8;
}
.input-list:last-child:after {
  content: " ";
  position: absolute;
  left: 0rpx;
  bottom: 0;
  right: 0rpx;
  height: 1px;
  border-bottom: 1rpx solid #D8D8D8;
  color: #D8D8D8;
}


.picker{
  padding: 19rpx 26rpx;
  background-color: #FFFFFF;
}

checkbox{
  display: flex;
  margin-right: 10px;
}



.item-row {
  display: inline-flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 10px;
  padding-top: 10px;
}
.item-row-span {
  display: inline-flex;
  margin-left:10px;
  margin-right: 10px;
  align-items: center;
  justify-content: center;
}
.item-row-top-line {
  border-top: 1rpx solid #D8D8D8;
  width: 100%
}
.item-row-bottom-line {
  border-top: 1rpx solid #D8D8D8;
}

.item-avatar {
  position: relative;
  display: inline-flex;

  width: 60rpx;
  height: 60rpx;
  border-radius: 50%; 
  overflow: hidden; 
  margin-left: 10px;
  
}
.item-img {
  position: absolute;
  top: -3%;
  left: -3%;
  width: 106%;
  height: 106%;
}
.item-name {
  font-size: 34rpx;
  color: #323232;
  font-weight: normal;
  
  display: inline-flex;
  margin: 5px;
  margin-left:20px;
}

.section-header {
  font-size: 34rpx;
  color: #030303;
  margin: 5px;
  margin-left: 2px;

}
.section-header:before {
  content: " ";
  
  left: 0;
  top: 0;
  bottom: 0;
  width: 18px;
  border-left: 3px solid #D80000;
  color: #D80000;
  margin-right: 10px;
}